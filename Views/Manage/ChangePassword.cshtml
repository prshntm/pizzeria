@model WebPizza.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля пользователя";
}



<div class="row jumbotron" style="width:500px;">
    <h2 style="text-align:center;">@ViewBag.Title</h2>
    <hr />
    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <h3 style="text-align:center;">Действующий пароль</h3>
            <div class="col-md-10" style="margin-left:8%">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <h3 style="text-align:center;">Новый пароль</h3>
            <div class="col-md-10" style="margin-left:8%">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <h3 style="text-align:center;">Подтверждение нового пароля</h3>
            <div class="col-md-10" style="margin-left:8%">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Изменить пароль" class="btn btn-default" style="margin-left:16%">
            </div>
        </div>
    }
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
