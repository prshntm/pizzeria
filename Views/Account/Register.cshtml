@model WebPizza.Models.RegisterViewModel
@{
    ViewBag.Title = "Sign up";
}



<div class="row jumbotron" style="width:500px;">
    <h2>@ViewBag.Title</h2>
    <hr/>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <h3 style="text-align:center;">E-mail</h3>
            <div class="col-md-10" style="margin-left:8%">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <h3 style="text-align:center;">Password</h3>
            <div class="col-md-10" style="margin-left:8%">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <h3 style="text-align:center;">Password confirmation</h3>
            <div class="col-md-10" style="margin-left:8%">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <br/>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Sign up"  style="margin-left:20%">
            </div>
        </div>
    }
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
